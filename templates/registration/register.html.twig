{% extends 'base.html.twig' %}

{% block title %}Green Phoenix | Inscription{% endblock %}

{% block body %}


    <div class="row justify-content-center my-5">
        <div class="col-6">
            <div  class="card o-hidden border-0 shadow-lg my-5">
                <div id="form-wrapper" class="card-body">
                    <form method="POST" action="{{ path('app_register') }}">

                        <div class="row justify-content-center mt-4">
                            <div class="form-group col-5 text-center">
                                <h1 class="h3 mb-3 font-weight-normal">Inscription</h1>
                            </div>
                        </div>

                        {% if errors is defined and errors|length > 0 %}
                            <div >
                                <ul>
                                    {% for error in errors %}
                                        <div class="alert alert-danger">
                                            <li>{{ error }}</li>
                                        </div>

                                    {% endfor %}
                                </ul>
                            </div>
                        {% endif %}

                        <div class="row justify-content-center mt-3 mb-3">
                            <div class="form-group col-5">
                                <label for="inputText">Prénom *</label>
                                <input type="text" value="" name="firstName" id="inputTex" class="form-control" autocomplete="Prénom" autofocus>
                            </div>
                            <div class="form-group col-5">
                                <label for="inputText">Nom *</label>
                                <input type="text" value="" name="lastName" id="inputTex" class="form-control" autocomplete="Prénom"  autofocus>
                            </div>
                        </div>

                        <div class="row justify-content-center mt-3 mb-3">
                            <div class="form-group col-10">
                                <label for="inputEmail">Email *</label>
                                <input type="email" value="" name="email" id="inputEmail" class="form-control" autocomplete="email"  autofocus>
                            </div>
                        </div>

                        <div class="row justify-content-center mt-3 mb-3">
                            <div class="form-group col-10">
                                <label for="inputPassword">Mot de passe *</label>
                                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" >

                                <input type="hidden" name="_csrf_token"
                                       value="{{ csrf_token('authenticate') }}"
                                >
                            </div>
                        </div>

                        <div class="row justify-content-center mt-3 mb-3">
                            <div class="col-10">
                                <button class="btn btn-primary" type="submit">
                                    Valider
                                </button>
                            </div>



                            {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html

                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Remember me
                                </label>
                            </div>
                            #}

                    </form>

                    <div class="row mt-5 ">
                        <div class="text-center ">
                            <a class="small" href="{{ path('app_login') }}">Déja inscrit? Se Connecter</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>


    </div>





{% endblock %}

